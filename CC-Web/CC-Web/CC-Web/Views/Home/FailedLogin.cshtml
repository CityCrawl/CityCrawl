@{
    ViewData["Title"] = "Login";
}

<img src="~/Images/CCLogo.png" class="generel_style_image" />

<p style="color: red;" class="generel_style_txt_box">Login Failed. Please try again!</p>

<form action="FailedLogin">
    <input type="email" id="fname" name="email" placeholder="E-mail" style="color: black;" class="generel_style_txt_box"><br><br>
    <input type="text" id="lname" name="password" placeholder="Password" style="color: black;" class="generel_style_txt_box"><br><br>
    <input type="submit" value="Submit" class="BlueBtn" id="center_btn">
</form>